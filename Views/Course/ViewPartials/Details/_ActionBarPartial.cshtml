
<div class="action-bar-container">
    <a class="folder-link">
        <i class="fa-regular fa-folder"></i>
        <span class="folder-title">Folder</span>
    </a>

    <div class="action-bar col-4 d-flex justify-content-end align-items-center p-0">
        <button class="btn-options">
            <div class="selected">
                <i class="fa-solid fa-bookmark"></i>
                Lưu
            </div>
            <div class="options">
                <div class="option" data-bs-toggle="modal" data-bs-target="#create-folder-modal">
                    <i class="fa-solid fa-plus"></i>
                    Thư mục mới
                </div>
                <hr class="m-0" />
                @for (int i = 1; i <= 5; i++)
                {
                    <div class="option">
                        <i class="fa-regular fa-folder"></i>
                        Folder @i
                    </div>
                }
            </div>
        </button>

        <button id="btn-share" title="Chia sẻ">
            <i class="fa-solid fa-arrow-up-from-bracket"></i>
        </button>

        <button class="btn-options" title="Xem thêm">
            <div class="selected">
                <i class="fa-solid fa-ellipsis"></i>
            </div>
            <div class="options">
                <div class="option">
                    <i class="fa-solid fa-pen"></i>
                    Sửa
                </div>
                <div class="option text-danger">
                    <i class="fa-solid fa-trash"></i>
                    Xóa
                </div>
            </div>
        </button>
    </div>
</div>
<h2 class="course-title">@Model.Title</h2>