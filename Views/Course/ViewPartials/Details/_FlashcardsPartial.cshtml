@model dynamic
<div class="term-defi-cards" tabindex="0">
    <div class="card-inner">
        <div class="card-front">
            <div class="card-actions">
                <button title="Sửa" id="btn-open-edit-modal">
                    <i class="fa-solid fa-pen text-secondary"></i>
                </button>
                <button onclick="textToSpeech('@Model.Flashcard.Term', '@Model.Flashcard.TermLanguageCode')" title="Phát âm">
                    <i class="fa-solid fa-volume-high text-secondary"></i>
                </button>
                <button title="Gắn sao" 
                        data-is-starred="@Model.Flashcard.IsStarred"
                        data-flashcard-id="@Model.Flashcard.Id"
                        onclick="starredFlashcard(this)">
                    <i class="fa-solid fa-star"></i>
                </button>
            </div>
            <span id="text-front">@Model.Flashcard.Term</span>
        </div>
        <div class="card-back">
            <div class="card-actions">
                <button title="Chỉnh sửa">
                    <i class="fa-solid fa-pen text-secondary"></i>
                </button>
                <button onclick="textToSpeech('@Model.Flashcard.Definition', '@Model.Flashcard.DefiLanguageCode')" title="Phát âm">
                    <i class="fa-solid fa-volume-high text-secondary"></i>
                </button>
                <button title="Gắn sao"
                        data-is-starred="@Model.Flashcard.IsStarred"
                        data-flashcard-id="@Model.Flashcard.Id"
                        onclick="starredFlashcard(this)">
                    <i class="fa-solid fa-star"></i>
                </button>
            </div>
            <span id="text-back">@Model.Flashcard.Definition</span>
        </div>
    </div>
</div>
