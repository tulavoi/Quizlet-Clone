@{
    string isHomePage = ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "";
    string isLibraryPage = ViewData["ActivePage"]?.ToString() == "UserLibrary" ? "active" : "";
}
<ul class="menu-list">
    <a class="menu-item @isHomePage" asp-controller="Home" asp-action="Index">
        <i class="fas fa-home"></i>
        <span>Trang chủ</span>
    </a>
    <a class="menu-item @isLibraryPage" asp-controller="UserLibrary" asp-action="Courses"
       asp-route-username="@User.Identity?.Name">
        <i class="fa-regular fa-folder"></i>
        <span>Thư viện của bạn</span>
    </a>
    <li class="menu-item notification">
        <i class="fa-regular fa-bell"></i>
        <span>Thông báo</span>
    </li>
    <hr>
    <li class="menu-title">Bắt đầu tại đây</li>
    <a class="menu-item" asp-action="Create" asp-controller="Course">
        <img class="flashcard-icon" src="/images/icons/card.png" alt="Icon">
        <span>Thẻ ghi nhớ</span>
    </a>
</ul>