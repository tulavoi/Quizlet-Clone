@using SmartCards.DTOs.Course
@model List<CourseDTO>
@{
    ViewData["Title"] = "Học phần của bạn | SmartCards";
}
@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}
<div class="container my-4">
    <!-- Học phần gần đây -->
    <div>
        <h5 class="section-title">Gần đây</h5>
        <div class="row gy-3">
            <a class="col-md-6 btn">
                <div class="recent-course p-2 row">
                    <div class="col-2 p-0">
                        <img src="/images/icons/card.png" alt="Icon">
                    </div>
                    <div class="col-10 p-0">
                        <h6 class="mb-1">Từ vựng N5 (Động từ)</h6>
                        <span class="fw-bold course-info m-0 text-secondary">Học phần • 106 terms • Tác giả: bạn</span>
                    </div>
                </div>
            </a>

           
        </div>
    </div>

    <!-- Bộ thẻ ghi nhớ phổ biến -->
    <div class="mt-5">
        <h5 class="section-title">Bộ thẻ ghi nhớ phổ biến</h5>
        <div class="row gy-3">
            <div class="col-md-4">
                <div class="popular-item p-3">
                    <h6>matematica</h6>
                    <p class="term-count">15 thuật ngữ</p>
                    <p class="author">quizlette727480 • Giáo viên</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="popular-item p-3">
                    <h6>SMARTER TGATI 2024 VOCAB</h6>
                    <p class="term-count">896 thuật ngữ</p>
                    <p class="author">GATENGCOOLCOOLI • Giáo viên</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="popular-item p-3">
                    <h6>Thanksgiving Trivia</h6>
                    <p class="term-count">27 thuật ngữ</p>
                    <p class="author">alexa-08</p>
                </div>
            </div>
        </div>
    </div>
</div>
