@{
    ViewData["Title"] = $"{ViewBag.Username} | Quizlet-Clone";
    Layout = "~/Views/UserLibrary/Shared/_Layout.cshtml";
}

<div class="content-container">
    <!-- Filter and Search Bar -->
    <div class="row">
        <div class="col-6 d-flex align-items-center">
            <div class="select-container">
                <div class="custom-select">
                    <div class="selected" data-value="recently">
                        Gần đây
                        <i class="fa-solid fa-angle-down"></i>
                    </div>
                    <div class="options">
                        <div class="option" data-value="created">Đã tạo</div>
                        <div class="option" data-value="recently">Gần đây</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="search-container">
                <input type="text" placeholder="Tìm kiếm thẻ ghi nhớ" />
                <i class="fa-solid fa-magnifying-glass" title="Tìm kiếm thẻ ghi nhớ"></i>
            </div>
        </div>
    </div>

    <!-- Course List -->
    <div class="list-group course-group">
        <header>
            <h2>HÔM NAY</h2>
            <div class="line"></div>
        </header>
        @for (int i = 0; i < 10; i++)
        {
            <div class="card course-item" onclick="pageRedirect('/tu-vung-bai-32-20250212042545987-1021')">
                <div class="tag">
                    <span class="items-count">6 thuật ngữ</span>
                    <div class="separator"></div>
                    <a class="user-link" asp-controller="UserLibrary"
                       asp-action="Index" asp-route-username="@ViewBag.Username">
                        <img src="~/images/icons/avatar.png" alt="Avatar" class="avatar" title="Thăm hồ sơ của @ViewBag.Username" />
                        <span class="username">@ViewBag.Username</span>
                    </a>
                </div>
                <div class="title">
                    <span>Từ vựng bài 32 (N4)</span>
                    <i class="fa-solid fa-lock icon-lock"></i>
                </div>
            </div>
        }
    </div>
</div>

